{
  "name": "krzysztofzuraw.com",
  "version": "4.0.0",
  "description": "Krzysztof Żuraw site",
  "keywords": [
    "blog",
    "11ty"
  ],
  "license": "MIT",
  "author": "Krzysztof Żuraw (https://krzysztofzuraw.com/)",
  "main": "n/a",
  "scripts": {
    "start:eleventy": "eleventy --serve",
    "start:tailwind": "tailwindcss --input ./src/css/index.css --output ./dist/css/index.css --watch",
    "dev": "run-p start:*",
    "build": "run-p build:*",
    "build:eleventy": "eleventy",
    "build:tailwind": "NODE_ENV=production tailwindcss  --input ./src/css/index.css --output ./dist/css/index.css --minify",
    "clean:dist": "rimraf dist/*",
    "debug": "DEBUG=* eleventy",
    "img:convert": "./scripts/convert-img.sh",
    "prereinstall": "npm run clean:dist",
    "reinstall": "rimraf node_modules/*",
    "postreinstall": "npm install"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  },
  "prettier": {
    "printWidth": 100
  },
  "devDependencies": {
    "@11ty/eleventy": "1.0.1",
    "@11ty/eleventy-navigation": "0.3.3",
    "@11ty/eleventy-plugin-rss": "1.1.2",
    "@tailwindcss/typography": "0.5.2",
    "image-size": "1.0.1",
    "lint-staged": "13.0.0",
    "luxon": "2.4.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.2",
    "prettier-plugin-packagejson": "2.2.18",
    "prettier-plugin-tailwindcss": "0.1.11",
    "rimraf": "3.0.2",
    "tailwindcss": "3.0.24"
  }
}
