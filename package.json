{
  "name": "krzysztofzuraw.com",
  "version": "3.0.0",
  "description": "Krzysztof Żuraw site",
  "main": "n/a",
  "scripts": {
    "tailwind:watch": "tailwindcss --input ./src/css/index.css --output ./dist/css/index.css --watch",
    "start": "eleventy --serve",
    "dev": "npm run start & npm run tailwind:watch",
    "tailwind:build": "NODE_ENV=production tailwindcss --input ./src/css/index.css --output ./dist/css/index.css --minify",
    "prebuild": "npm run clean:dist",
    "build": "eleventy & npm run tailwind:build",
    "debug": "DEBUG=* eleventy",
    "clean:dist": "rimraf dist/*",
    "prereinstall": "npm run clean:dist",
    "reinstall": "rimraf node_modules/*",
    "postreinstall": "npm install",
    "img:convert": "npx @squoosh/cli --webp '{quality: 75}'",
    "blogroll:generate": "node scripts/gen-blogroll.js"
  },
  "keywords": [
    "blog",
    "11ty",
    "tailwindcss"
  ],
  "author": "Krzysztof Żuraw <info@kzuraw.com> (https://krzysztofzuraw.com/)",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "0.12.1",
    "@11ty/eleventy-cache-assets": "2.3.0",
    "@11ty/eleventy-navigation": "0.3.2",
    "@11ty/eleventy-plugin-rss": "1.1.2",
    "@tailwindcss/typography": "0.4.1",
    "dotenv": "10.0.0",
    "image-size": "1.0.0",
    "luxon": "2.0.2",
    "node-opml-parser": "1.0.0",
    "rimraf": "3.0.2",
    "tailwindcss": "2.2.19"
  }
}
