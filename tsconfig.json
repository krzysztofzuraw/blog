{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~components/*": ["src/components/*"],
      "~assets/*": ["src/assets/*"],
      "~layouts/*": ["src/layouts/*"],
      "~pages/*": ["src/pages/*"],
      "~public/*": ["public/*"],
      "~content/*": ["src/content/*"],
      "~utils/*": ["src/utils/*"],
      "~data/*": ["src/data/*"]
    }
  }
}
