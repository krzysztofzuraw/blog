{
  "emmet.includeLanguages": {
    "nunjucks": "html"
  },
  "files.associations": {
    "*.njk": "html"
  },
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 100,
    "editor.lineNumbers": "off",
    "editor.quickSuggestions": true,
    "editor.wordBasedSuggestions": false
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "css.validate": false
}
