{
  "emmet.includeLanguages": {
    "nunjucks": "html"
  },
  "files.associations": {
    "*.njk": "html",
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "cSpell.words": [
    "cloudbuild",
    "eleventy",
    "gcloud",
    "krzysztofzuraw",
    "luxon",
    "PNPM",
    "postreinstall",
    "prebuild",
    "prereinstall",
    "Shortcode",
    "tailwindcss",
    "Turborepo",
    "Vercel",
    "Vite"
  ],
  "[markdown]": {
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,
    "editor.lineNumbers": "off",
    "editor.quickSuggestions": true,
    "editor.wordBasedSuggestions": false
  }
}
